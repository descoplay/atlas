{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "quotes": [ "error", "single" ],
        "semi": [ 1, "never" ],
        "no-multiple-empty-lines": [ 1, { "max": 1 } ],
        "max-len": [ 1, 100, 100, {} ],
        "array-bracket-spacing": [ 1, "always", {} ],
        "comma-spacing": [ 1, { "after": true } ],
        "comma-dangle": [ 1, {
            "arrays": "always",
            "objects": "always",
            "imports": "always",
            "exports": "always"
        }],
        "keyword-spacing": [ 1, { "before": true } ],
        "space-before-function-paren": 1,
        "eqeqeq": [ 1, "smart" ],
        "no-trailing-spaces": 1,
        "no-multi-spaces": 1,
        "eol-last": [ 1, "never" ],
        "indent": [ 1, 4, { "SwitchCase": 1 } ],
        "brace-style": [ 1, "stroustrup", { "allowSingleLine": true } ],
        "no-return-assign": [ 0 ],
        "no-console": "off"
    }
}